<% if @task.nil? %>
  <h1>404 Not Found</h1>
<% else %>
  <h1>Task Details</h1>
  <p><%= "Task: #{@task.title}" %></p>
  <p><%= "Description: #{@task.description}" %></p>
  <p><%= "Completion Date: #{@task.completion_date}" %></p>
  <p>
    <%= link_to 'Edit', edit_task_path(@task.id) %>
  </p>
  <p>
    <%= link_to "Delete", task_path(@task.id), method: :delete, data: {confirm: "Are you sure?"}  %>
  </p>
<% end %>
